<%- include('./partials/header') %>

<div class="w-full min-h-screen flex px-6 py-8 bg-gray-100">
  <!-- Sidebar -->
  <div class="w-1/4 pr-4">
    <div class="bg-white shadow rounded-lg p-4 space-y-3">
      <a href="/admin/products" class="block text-blue-600 font-medium hover:underline">All Products</a>
      <a href="/admin/create" class="block text-blue-600 font-medium hover:underline">Create New Product</a>
    </div>
  </div>

  <!-- Main content -->
  <div class="w-3/4 flex flex-col gap-5">
    <!-- Actions -->
    <div class="flex justify-between items-center">
      <h2 class="text-2xl font-bold text-gray-800">Product Management</h2>
      <a href="/admin/delete-all" class="text-red-500 hover:underline">Delete All</a>
    </div>

    <!-- Product grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
      <% products.forEach(product => { %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition overflow-hidden">
          <!-- Product Image -->
          <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-52 object-cover">

          <!-- Product Details -->
          <div class="p-4 flex justify-between items-center">
            <div>
              <h3 class="text-lg font-semibold text-gray-800"><%= product.name %></h3>
              <h4 class="text-green-600 font-bold">â‚¹ <%= product.price %></h4>
            </div>
            <div class="flex flex-col space-y-2">
              <a href="/admin/edit/<%= product._id %>" class="bg-blue-500 text-white p-2 rounded-full hover:bg-blue-600">
                <i class="ri-pencil-line"></i>
              </a>
              <a href="/admin/delete/<%= product._id %>" class="bg-red-500 text-white p-2 rounded-full hover:bg-red-600">
                <i class="ri-delete-bin-line"></i>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
